{% if environment != 'prod' %}
##### LOCAL project settings.
# All these settings are overriding the .combawa global project
# variables and are available in all the scripts/* files.

# Local environment.
COMBAWA_BUILD_ENV={{ environment }}

# Local build mode. Should never differ from global one.
#COMBAWA_BUILD_MODE=install

# Backup base before build.
COMBAWA_BACKUP_BASE={{ backup_base }}

# Reinstall site before building.
COMBAWA_REIMPORT_REF_DUMP={{ reimport }}

# Environment URI.
COMBAWA_WEBSITE_URI={{ environment_url }}

# Whether to retrieve the dump from a remote server or not.
# Re-run the generate-environment script to change this value afterwards.
COMBAWA_FETCH_DB_DUMP={{ fetch_dump }}

{% if fetch_dump -%}
# Map this to your ~/.ssh/config file.
#
# Example of config entry.
# Host my_ssh_server
#   HostName production.my_server.com
#   Port 774
#   User www-data
#   (Optional) IdentityFile ~/.ssh/my_private_key
#
# More info: http://nerderati.com/2011/03/17/simplify-your-life-with-an-ssh-config-file/
COMBAWA_SSH_CONFIG_NAME={{ ssh_config_name }}

# Path on the prod server where the dump is stored.
COMBAWA_PROD_DB_DUMP_PATH={{ ssh_dump_path }}
{%- endif %}


# Name of the reference dump name in the repo.
COMBAWA_DUMP_FILE_NAME={{ dump_file_name }}

##### Drush settings.
# Drush reads .env files and use these settings by default.

DRUSH_OPTIONS_URI={{ environment_url }}
{%- endif %}


##### Database access settings.

COMBAWA_DB_HOSTNAME={{ db_host }}
COMBAWA_DB_PORT={{ db_port }}
COMBAWA_DB_DATABASE={{ db_name }}
COMBAWA_DB_USER={{ db_user }}
COMBAWA_DB_PASSWORD={{ db_password }}
